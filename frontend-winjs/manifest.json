      "name": "Films Populaires",
      "short_name": "Populaires",
      "description": "Voir les films populaires du moment",
      "url": "/frontend-winjs/pages/home/home.html?category=popular",
      "icons": [
        {
          "src": "/images/icons/shortcut-popular.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Mes Favoris",
      "short_name": "Favoris",
      "description": "Accéder à ma liste de films favoris",
      "url": "/frontend-winjs/pages/home/home.html?category=favorites",
      "icons": [
        {
          "src": "/images/icons/shortcut-favorites.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Films à Venir",
      "short_name": "À Venir",
      "description": "Découvrir les prochaines sorties cinéma",
      "url": "/frontend-winjs/pages/home/home.html?category=upcoming",
      "icons": [
        {
          "src": "/images/icons/shortcut-upcoming.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
